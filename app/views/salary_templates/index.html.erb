<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All salaries
    </h1>

    <a href="/salaries/new" class="btn btn-block btn-outline-secondary">
      Add a new salary
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "salary_templates/salaries_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Monthly wage
        </th>

        <th>
          Monthly benefits
        </th>

        <th>
          Month
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @salaries.each do |salary| %>
      <tr>
        <td>
          <%= salary.id %>
        </td>

        <td>
          <%= salary.monthly_wage %>
        </td>

        <td>
          <%= salary.monthly_benefits %>
        </td>

        <td>
          <%= salary.month_id %>
        </td>

        <td>
          <%= time_ago_in_words(salary.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(salary.updated_at) %> ago
        </td>

        <td>
          <a href="/salaries/<%= salary.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @salaries, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
